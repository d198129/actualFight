<!--miniprogram/pages/day/day.wxml-->
<nav-bar title="纪念日" statusBarColor="#87ceeb" navBarColor="#87ceeb" titleColor="#fff" isture="true"></nav-bar>
<view class="userinfo_detail">
  <view class="detail" wx:for="{{days}}" wx:for-item="item" wx:key="item._id">
    <text>{{item.mouth}}月{{item.day}}日</text><text>{{item.name}}</text>
  </view>
</view>
<view class="change1">
  <button plain type="primary">修改</button>
</view>
<view class="change">
  <button plain type="primary" bindtap="addday">添加</button>
</view>