/* pages/me/me.wxss */
.userinfo_wrapper {
  position: relative;
  width: 100%;
  overflow: hidden;
  box-shadow: 2rpx 2rpx 10rpx #87ceeb;
}
.userinfo_wrapper .user_wrap {
  width: 100%;
  height: 150rpx;
  background-color: #fff;
}
.userinfo_wrapper .user_wrap .head {
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 10rpx 0;
}
.userinfo_wrapper .user_wrap .head .avatar {
  flex: 0 0 150rpx;
  text-align: center;
}
.userinfo_wrapper .user_wrap .head .avatar image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.userinfo_wrapper .user_wrap .head .nickname {
  flex: 1;
  font-size: 48rpx;
  text-align: left;
  line-height: 100rpx;
}
.userinfo_wrapper .user_wrap .head .next {
  flex: 0 0 50rpx;
  font-size: 48rpx;
}
.app_info_wrap {
  font-size: 48rpx;
  margin-top: 30rpx;
}
.app_info_wrap .app_info_item {
  padding: 20rpx 30rpx 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  box-shadow: 2rpx 2rpx 10rpx #87ceeb;
}
.app_info_wrap .app_info_contact {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
}
.recommend_wrap {
  font-size: 48rpx;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 2rpx 2rpx 10rpx #87ceeb;
}
