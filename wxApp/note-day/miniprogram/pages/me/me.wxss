/* pages/me/me.wxss */
page {
  background-color: #edece8;
}
.userinfo_wrapper {
  position: relative;
  width: 100%;
  height: 60vh;
  overflow: hidden;
}
.userinfo_wrapper .user_wrap {
  width: 100%;
  height: 150rpx;
  background-color: #fff;
}
.userinfo_wrapper .user_wrap .head {
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 30rpx 0;
}
.userinfo_wrapper .user_wrap .head .avatar {
  flex: 0 0 150rpx;
  text-align: center;
}
.userinfo_wrapper .user_wrap .head .avatar image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.userinfo_wrapper .user_wrap .head .nickname {
  flex: 1;
  font-size: 28px;
  text-align: left;
  line-height: 100rpx;
}
.userinfo_wrapper .user_wrap .head .next {
  flex: 0 0 50rpx;
  font-size: 28px;
}
